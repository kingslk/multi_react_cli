 {{#extend "scss"}}
    {{#content "sprites"}}
        {{#each sprites}}
            @mixin {{name}} {
                background-position: {{#if offset_x}}{{offset_x}}px{{else}}0{{/if}} {{#if offset_y}}{{offset_y}}px{{else}}0{{/if}};
                background-size: {{#if total_width}}{{total_width}}px{{else}}0{{/if}} {{#if total_height}}{{total_height}}px{{else}}0{{/if}};
                width: {{width}}px;
                height: {{height}}px;
            }
        {{/each}}
    {{/content}}

    {{#content "spritesheet"}}
        %{{options}} {
            background-image: url({{{spritesheet.escaped_image}}});
            background-repeat: no-repeat;
        }
    {{/content}}
{{/extend}}