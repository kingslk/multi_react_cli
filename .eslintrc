{
    "env": { "browser": true, "worker": true },
    "extends": ["airbnb-base", "airbnb/rules/react", "prettier", "prettier/react"],
    "plugins": ["prettier"],
    "parser": "babel-eslint",
    "globals": {
        "$": true,
        "window": true,
        "_": true,
        "moment": true,
        "require": true,
        "UniLogin": true,
        "IM": true,
        "classnames": true
    },
    "rules": {
        "import/no-unresolved": 0,
        "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
        "react/jsx-pascal-case": 0,
        "global-require": 0,
        "func-names": 0,
        "react/button-has-type": 0,
        "react/prop-types": 0,
        "no-unused-vars": 1,
        "import/no-cycle": 1,
        "no-empty": [1, { "allowEmptyCatch": true }],
        "react/no-danger": 0,
        "consistent-return": 0,
        "no-underscore-dangle": 0,
        "no-plusplus": 0,
        "camelcase": 0,
        "import/prefer-default-export": 0,
        "no-param-reassign": [1, { "ignorePropertyModificationsFor": ["draft"] }],
        "prettier/prettier": 2,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/jsx-props-no-spreading": 0
    },
    "settings": {
        "import/resolver": {
            "node": { "paths": ["src"] },
            "alias": {
                "map": [
                    ["@", "./src/"],
                    ["@css", "./public/css/"],
                    ["@assets", "./public/assets/"],
                    ["@utils", "./src/utils/"],
                    ["@components", "./src/components/"],
                    ["@hooks", "./src/hooks/"],
                    ["@config", "./public/config/"],
                    ["@api", "./src/api/"]
                ]
            }
        }
    }
}
